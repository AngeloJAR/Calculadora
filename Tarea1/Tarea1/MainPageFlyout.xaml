<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tarea1.MainPageFlyout"
             Title="Menu">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <!-- Header -->
            <Frame>
                <Label Text="Menu" TextColor="Black" FontSize="50" HorizontalOptions="Center"/>
            </Frame>

            <!-- Menu Buttons -->
            <Button Text="Inicio" Clicked="btnInicio"/>
            <Button Text="Acerca de" />
            <Button Text="Iniciar sesión" Clicked="btnIniciosesion" />
            <ImageButton  Source="imgGen.jpg" Clicked="btnImagenes" Aspect="AspectFill" WidthRequest="40"/>
            <Button Text="Calculadora" Clicked="btnCalculadora" />
            <Button Text="Ubicacion" Clicked="btnUbicacion" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>